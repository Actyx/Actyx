  },
  "bundledDependencies": [
    "rxjs"
  ],
  "description": "Actyx Pond",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.19.2",
    "@types/jest": "27.0.3",
    "@types/ramda": "0.27.60",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "cross-env": "^7.0.3",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.5",
    "license-check-and-add": "^4.0.3",
    "madge": "5.0.1",
    "moment": "2.29",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "testcheck": "1.0.0-rc.2",
    "ts-jest": "27.1.1",
    "typedoc": "^0.22.10",
    "typescript": "4.5.4"
  },
  "homepage": "https://developer.actyx.com/docs/reference/pond",
  "keywords": [
    "actyx",
    "pond",
    "distributed-systems",
    "distributed apps",
    "distributed",
    "industry 4.0",

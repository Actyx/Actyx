{
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "sourceMap": false,
    // TODO: temporary while RxJs fix their issues https://github.com/ReactiveX/rxjs/issues/3031
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "preserveConstEnums": true
  }
}

{
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "sourceMap": false,
    // TODO: currently broken by fp-ts (of all projects ...)
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2019",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["dom", "es2019"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "preserveConstEnums": true
  }
}

# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
#end_of_line = lf
insert_final_newline = true

# 2 space indentation
[**.*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Set default charset
[*.{js, pug, ts}]
charset = utf-8

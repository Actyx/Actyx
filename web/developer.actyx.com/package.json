{
  "name": "developers-actyx-com",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "prestart": "npm run copy-schemas && npm run build-monorepo-dependencies && svgo -r -f ./static/images -o ./static/images",
    "start": "docusaurus start --host 0.0.0.0",
    "copy-schemas": "node bin/copy-schemas.js",
    "build-monorepo-dependencies": "node bin/build-monorepo-dependencies.js",
    "prebuild": "npm run prestart",
    "build": "npm run lint && docusaurus build",
    "postbuild": "node bin/copy-redirects.js",
    "postinstall": "patch-package",
    "swizzle": "docusaurus swizzle",
    "deploy": "npm run lint && docusaurus deploy",
    "serve": "docusaurus serve",
    "check:code": "eslint './src/**/*.{js,ts,tsx}' --max-warnings=0",
    "fix:code": "npm run check:code -- --fix",
    "check:md": "markdownlint './docs/**/*' './blog/**/*'",
    "fix:md": "npm run check:md -- --fix",
    "check:text": "textlint -f pretty-error ./docs/**/* ./blog/**/*",
    "fix:text": "npm run check:text -- --fix",
    "check:spelling": "npm run fix:spelling -- --report",
    "fix:spelling": "mdspell './docs/**/*.md' './docs/**/*.mdx' './blog/**/*.md' './blog/**/*.mdx' '!./docs/reference/js-ts-sdk/**/*.md' '!./docs/reference/pond/**/*.md' --ignore-numbers --ignore-acronyms --en-us",
    "lint": "npm run check:code && npm run check:md && npm run check:text && npm run check:spelling",
    "lint:fix": "npm run fix:code && npm run fix:md && npm run fix:text && npm run fix:spelling",
    "check:links": "blc -ro http://localhost:3000"
  },
  "dependencies": {
    "@docusaurus/core": "^2.0.0-alpha.70",
    "@docusaurus/preset-classic": "^2.0.0-alpha.70",
    "@docusaurus/theme-classic": "^2.0.0-alpha.70",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "chromium": "^2.1.2",
    "classnames": "^2.2.6",
    "cosmos-release": "file:../../release",
    "docusaurus": "^1.14.6",
    "docusaurus-gtm-plugin": "0.0.2",
    "js-cookie": "^2.2.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-markdown": "^5.0.3",
    "react-syntax-highlighter": "^15.4.3",
    "react-youtube": "^7.9.0",
    "remark-code-import": "^0.3.0",
    "semver": "^7.3.5",
    "styled-components": "^5.1.1",
    "textlint-rule-no-empty-section": "^1.1.0",
    "typescript-eslint": "0.0.1-alpha.0",
    "xlsx": "^0.16.9"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.0.0-alpha.72",
    "@textlint-rule/textlint-rule-no-unmatched-pair": "^1.0.7",
    "@tsconfig/docusaurus": "^1.0.2",
    "@types/react": "^17.0.3",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.3",
    "broken-link-checker": "^0.7.8",
    "svgo": "^1.3.2",
    "copy-dir": "^1.2.0",
    "docusaurus-plugin-typedoc": "^0.12.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "markdown-spellcheck": "^1.3.1",
    "markdownlint-cli": "^0.23.2",
    "mkdirp": "^1.0.4",
    "nan": "^2.14.1",
    "patch-package": "^6.4.7",
    "prettier": "2.1.2",
    "textlint": "^11.7.6",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-date-weekday-mismatch": "^1.0.5",
    "textlint-rule-footnote-order": "^1.0.3",
    "textlint-rule-max-comma": "^1.0.4",
    "textlint-rule-no-start-duplicated-conjunction": "^2.0.2",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-period-in-list-item": "^0.3.2",
    "typedoc": "^0.20.35",
    "typedoc-plugin-markdown": "^3.6.0",
    "typescript": "^4.2.3"
  }
}

{
  "name": "developers-actyx-com",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "prestart": "npm run copy-schemas && npm run build-monorepo-dependencies",
    "start": "docusaurus start --host 0.0.0.0",
    "copy-schemas": "node bin/copy-schemas.js",
    "build-monorepo-dependencies": "node bin/build-monorepo-dependencies.js",
    "prebuild": "npm run prestart",
    "build": "npm run lint && docusaurus build",
    "postbuild": "node bin/copy-redirects.js",
    "postinstall": "patch-package",
    "swizzle": "docusaurus swizzle",
    "deploy:prod": "node bin/deploy-preflight.js && netlify deploy --prod --message",
    "deploy:draft": "node bin/deploy-preflight.js && netlify deploy --message",
    "serve": "docusaurus serve",
    "check:code": "eslint \"./src/**/*.{js,ts,tsx}\" \"./bin/**/*.{js,ts,tsx}\" --max-warnings=0",
    "fix:code": "npm run check:code -- --fix",
    "check:md": "markdownlint ./docs/**/* ./blog/**/*",
    "fix:md": "npm run check:md -- --fix",
    "check:text": "textlint -f pretty-error ./docs/**/* ./blog/**/*",
    "fix:text": "npm run check:text -- --fix",
    "check:spelling": "npm run fix:spelling -- --report",
    "fix:spelling": "mdspell ./docs/**/*.md ./docs/**/*.mdx ./blog/**/*.md ./blog/**/*.mdx !./docs/reference/js-ts-sdk/**/*.md !./docs/reference/pond/**/*.md --ignore-numbers --ignore-acronyms --en-us",
    "lint-sequential": "npm run check:code && npm run check:md && npm run check:text && npm run check:spelling",
    "lint": "concurrently \"npm:check:*\"",
    "lint:fix": "npm run fix:code && npm run fix:md && npm run fix:text && npm run fix:spelling",
    "find-dead-links": "blc -ro http://localhost:3000"
  },
  "dependencies": {
    "@docusaurus/core": "^2.0.0-beta.15",
    "@docusaurus/preset-classic": "^2.0.0-beta.15",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "docusaurus-gtm-plugin": "0.0.2",
    "js-cookie": "^3.0.1",
    "react": "^17.0.2",
    "react-cookie": "^4.1.1",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.0",
    "remark-code-import": "github:o1iver/remark-code-import",
    "semver": "^7.3.5",
    "styled-components": "^5.3.3",
    "textlint-rule-no-empty-section": "^1.1.0",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "2.0.0-beta.15",
    "@textlint-rule/textlint-rule-no-unmatched-pair": "^1.0.8",
    "@tsconfig/docusaurus": "^1.0.4",
    "@types/react": "^17.0.38",
    "@types/react-helmet": "^6.1.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.21",
    "broken-link-checker": "^0.7.8",
    "concurrently": "^7.0.0",
    "copy-dir": "^1.3.0",
    "docusaurus-plugin-typedoc": "^0.16.7",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-prettier": "^4.0.0",
    "markdown-spellcheck": "^1.3.1",
    "markdownlint-cli": "^0.30.0",
    "mkdirp": "^1.0.4",
    "nan": "^2.15.0",
    "netlify": "^10.1.2",
    "netlify-cli": "^8.15.1",
    "patch-package": "^6.4.7",
    "prettier": "2.5.1",
    "svgo": "^2.8.0",
    "textlint": "^12.1.0",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-date-weekday-mismatch": "^1.0.6",
    "textlint-rule-footnote-order": "^1.0.3",
    "textlint-rule-max-comma": "^2.0.2",
    "textlint-rule-no-start-duplicated-conjunction": "^2.0.2",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-period-in-list-item": "^0.3.2",
    "typedoc": "^0.22.11",
    "typedoc-plugin-markdown": "^3.11.12",
    "typescript": "^4.5.5"
  }
}

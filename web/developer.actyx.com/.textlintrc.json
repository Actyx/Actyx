{
  "filters": {
    "comments": true
  },
  "rules": {
    "no-todo": true,
    "no-start-duplicated-conjunction": {
      "interval": 2
    },
    "no-empty-section": true,
    "period-in-list-item": false,
    "date-weekday-mismatch": true,
    "@textlint-rule/no-unmatched-pair": true,
    "footnote-order": true
  },
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".mdx"]
    }
  }
}

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgActyxOsLogo"
        android:layout_width="50.4dp"
        android:layout_height="50.4dp"
        android:layout_marginStart="20.7dp"
        android:layout_marginTop="20.7dp"
        android:contentDescription="@string/actyxos_logo"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_actyxos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAppTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="46dp" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/labelActyxOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11.7dp"
        android:text="@string/app_name"
        android:textColor="@color/font_black"
        android:textSize="15.3sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineAppTop"
        app:layout_constraintStart_toEndOf="@+id/imgActyxOsLogo" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actyx_ag"
        android:textColor="@color/font_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/labelActyxOS"
        app:layout_constraintTop_toTopOf="@+id/guidelineAppTop" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.5dp"
        android:text="@string/contact"
        android:textColor="@color/font_grey_label"
        android:textSize="12.6sp"
        app:layout_constraintStart_toStartOf="@+id/imgActyxOsLogo"
        app:layout_constraintTop_toBottomOf="@+id/imgActyxOsLogo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/labelWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/website"
        android:textColor="@color/font_grey_label"
        android:textSize="12.6sp"
        app:layout_constraintStart_toStartOf="@+id/labelEmail"
        app:layout_constraintTop_toBottomOf="@+id/dividerEmail" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/labelLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="22.5dp"
        android:text="@string/license_agreement"
        android:textColor="@color/font_grey_label"
        android:textSize="12.6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/labelWebsite"
        app:layout_constraintTop_toBottomOf="@+id/dividerWebsite" />

    <com.actyx.os.android.activity.systeminfoscreens.TextWithIcon
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10.35dp"
        android:src="@drawable/ic_email_black_24dp"
        android:text="@string/contact_actyx_io"
        app:layout_constraintBottom_toBottomOf="@+id/labelEmail"
        app:layout_constraintEnd_toStartOf="@+id/guidelineAppCenter"
        app:layout_constraintTop_toTopOf="@+id/labelEmail" />


    <com.actyx.os.android.activity.systeminfoscreens.TextWithIcon
        android:id="@+id/www"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10.35dp"
        android:src="@drawable/ic_computer_black_24dp"
        android:text="@string/www_actyx_com"
        app:layout_constraintBottom_toBottomOf="@+id/labelWebsite"
        app:layout_constraintEnd_toStartOf="@+id/guidelineAppCenter"
        app:layout_constraintTop_toTopOf="@+id/labelWebsite" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAppCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/dividerEmail"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15.3dp"
        android:layout_marginEnd="10.35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/guidelineAppCenter"
        app:layout_constraintStart_toStartOf="@+id/imgActyxOsLogo"
        app:layout_constraintTop_toBottomOf="@+id/labelEmail" />

    <View
        android:id="@+id/dividerWebsite"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10.35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/guidelineAppCenter"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imgActyxOsLogo"
        app:layout_constraintTop_toBottomOf="@+id/labelWebsite" />

    <View
        android:id="@+id/dividerVersion"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10.35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/dividerEmail"
        app:layout_constraintEnd_toEndOf="@+id/stop_actyx_os"
        app:layout_constraintStart_toStartOf="@+id/guidelineAppCenter"
        app:layout_constraintTop_toTopOf="@+id/dividerEmail" />

    <View
        android:id="@+id/dividerCompat"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10.35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/dividerWebsite"
        app:layout_constraintEnd_toEndOf="@+id/stop_actyx_os"
        app:layout_constraintStart_toStartOf="@+id/guidelineAppCenter" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_actyx_os"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.5dp"
        android:layout_marginEnd="44.1dp"
        android:backgroundTint="@color/button_red"
        android:text="@string/stop_actyxos"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:cornerRadius="1.8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.actyx.os.android.activity.systeminfoscreens.TextWithIcon
        android:id="@+id/license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10.35dp"
        android:src="@drawable/ic_insert_drive_file_black_24dp"
        android:text="@string/details"
        app:layout_constraintBottom_toBottomOf="@+id/labelLicense"
        app:layout_constraintEnd_toStartOf="@+id/guidelineAppCenter"
        app:layout_constraintTop_toTopOf="@+id/labelLicense" />

    <com.actyx.os.android.activity.systeminfoscreens.LabelWithText
        android:id="@+id/applicationAppVersionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.35dp"
        app:label="@string/app_version"
        app:layout_constraintBottom_toBottomOf="@+id/email"
        app:layout_constraintEnd_toEndOf="@+id/stop_actyx_os"
        app:layout_constraintStart_toStartOf="@+id/guidelineAppCenter"
        app:layout_constraintTop_toTopOf="@+id/email" />

    <com.actyx.os.android.activity.systeminfoscreens.LabelWithText
        android:id="@+id/applicationCompatibilityText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.35dp"
        app:label="@string/compatibility"
        app:layout_constraintBottom_toBottomOf="@+id/www"
        app:layout_constraintEnd_toEndOf="@+id/stop_actyx_os"
        app:layout_constraintStart_toStartOf="@+id/guidelineAppCenter"
        app:layout_constraintTop_toTopOf="@+id/www" />

</androidx.constraintlayout.widget.ConstraintLayout>
